<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_scroll_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:scrollbarSize="10dp"
    android:padding="10dp"
    tools:context=".presentation.ui.activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/currentWeather_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="8dp"/>

                <FrameLayout
                    android:id="@+id/extendedWeather_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:id="@+id/map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                        <FrameLayout
                            android:id="@+id/geolocation_fragment_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"/>

                        <ImageView
                            android:id="@+id/transparent_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"/>

                </RelativeLayout>


        </LinearLayout>


</ScrollView>